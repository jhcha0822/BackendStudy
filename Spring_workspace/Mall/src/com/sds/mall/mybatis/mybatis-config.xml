<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.sds.mall.domain.TopCategory" alias="TopCategory"/>
		<typeAlias type="com.sds.mall.domain.SubCategory" alias="SubCategory"/>
		<typeAlias type="com.sds.mall.domain.Product" alias="Product"/>
		<typeAlias type="com.sds.mall.domain.Color" alias="Color"/>
		<typeAlias type="com.sds.mall.domain.Color" alias="Psize"/>
	</typeAliases>
	
	<!-- Spring에 의존적으로 DB연동을 해보자
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="JNDI">
				<property name="data_source" value="java:comp/env/jndi/mysql" />
			</dataSource>
		</environment>
	</environments>
	-->
	 
	<mappers>
		<mapper resource="com/sds/mall/mybatis/TopCategoryMapper.xml" />
		<mapper resource="com/sds/mall/mybatis/SubCategoryMapper.xml" />
		<mapper resource="com/sds/mall/mybatis/ProductMapper.xml" />
		<mapper resource="com/sds/mall/mybatis/ColorMapper.xml" />
		<mapper resource="com/sds/mall/mybatis/PsizeMapper.xml" />
	</mappers>
	
</configuration>