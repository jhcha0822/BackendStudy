<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Mall</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Tomcat이 가동될 때 메모리에 인스턴스가 생성되는 객체: application 내장 객체로 불리는 ServletContext -->
	<!-- 서블릿은 Tomcat 가동 이후 최초에 접속되는 사용자에 의해 서블릿의 인스턴스가 생성되기에 -->
	<!-- 아래처럼 서블릿 컨테이너에 중복되는 코드가 존재하고, 이를 누가 최초 접속하는지 여부에 상관없이 사용하려면 -->
	<!-- 서블릿의 존재보다도 시간적으로 앞서며 모든 서블릿이 언제나 접근할 수 있는 객체를 사용한다 -->
	<!-- ServletContext 객체에 스프링 컨테이너인 ApllicationContext를 붙여놓고, 이 컨테이너가 사용할 xml에 모델 영역의 객체를 등록, -->
	<!-- Tomcat 가동과 함께 모델 영역의 컴포넌트 Bean들인 @Service, @Repository, @Component등의 객체들이  공유 영역화 된다 -->
	
	<!-- Tomcat이 가동되는 Timing Catch -->
	<!-- listener>
		<listener-class>com.sds.mall.model.common.MyListener</listener-class>
	</listener -->
	
	<!-- Spring의 기능에도 내장 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- Application 내장객체 생성 시 무언가 전달할 것이 있다면 아래의 param 태그로 전달 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/root-context.xml</param-value>
	</context-param>
	
	
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- 관리자 요청을 처리하는 대표 컨트롤러 -->
	<servlet>
		<servlet-name>adminServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/admin-context.xml</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminServlet</servlet-name>
		<url-pattern>/admin/*</url-pattern>
		<!-- /admin/ 이 루트로 설정됨. 경로는 이 뒤에 이어붙임 -->
	</servlet-mapping>
	
	<!-- 클라이언트(쇼핑몰) 요청을 처리하는 대표 컨트롤러 -->
	<servlet>
		<servlet-name>shopServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/shop-context.xml</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>shopServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-app>