<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member">

	<!-- 회원 정보 등록 -->
	<!-- id="namespace id at DAO" -->
	<!-- selectkey: 키 값을 얻어오는 부분 -->
	<!-- insert 시에는 DTO에 pk값을 입력하지 않으므로 이 위치에 받아오자 -->
	<insert id="insert" parameterType="Member">
		insert into member(id, pass, name, email) values(#{id}, #{pass}, #{name}, #{email})
		<selectKey keyColumn="member_idx" resultType="int" keyProperty="member_idx" order="AFTER">
			select last_insert_id() as member_idx;
		</selectKey>
	</insert>

	


</mapper>